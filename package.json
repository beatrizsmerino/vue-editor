{
	"version": "3.1.0",
	"private": true,
	"name": "vue-editor",
	"description": "Editor online of code made with Vue.",
	"author": "beatrizsmerino@gmail.com",
	"license": "ISC",
	"repository": {
		"type": "git",
		"url": "https://github.com/beatrizsmerino/vue-editor.git"
	},
	"homepage": "https://beatrizsmerino.github.io/vue-editor",
	"bugs": {
		"url": "https://github.com/beatrizsmerino/vue-editor/issues"
	},
	"keywords": [
		"vue",
		"vite",
		"javascript",
		"editor",
		"json"
	],
	"main": "index.js",
	"type": "module",
	"scripts": {
		"install:clean": "rm -rf node_modules package-lock.json",
		"postinstall": "npm run lint",
		"prepare": "husky",
		"dev": "vite",
		"build": "vite build",
		"preview": "vite preview",
		"prettier:fix": "prettier --write \"./**/*.{css,scss,sass,json,js,cjs,mjs,vue}\"",
		"eslint:fix": "eslint \"**/*.{json,js,cjs,mjs,vue}\" --fix --ignore-path .eslintignore",
		"stylelint:fix": "stylelint \"**/*.{css,scss,sass,vue}\" --fix --ignore-path .stylelintignore",
		"lint": "npm run prettier:fix && npm run eslint:fix && npm run stylelint:fix",
		"deploy": "node gh-pages-deploy.js"
	},
	"dependencies": {
		"chalk": "^5.6.0",
		"execa": "^9.6.0",
		"json-editor-vue": "^0.18.1",
		"node-emoji": "^2.2.0",
		"v-clipboard": "^3.0.0-next.1",
		"vite-plugin-svg-icons": "^2.0.1",
		"vue": "^3.5.22",
		"vue-router": "^4.6.3",
		"vuex": "^4.1.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@vitejs/plugin-vue": "^6.0.2",
		"@vue/eslint-config-prettier": "^10.2.0",
		"eslint": "^8.57.0",
		"eslint-plugin-json": "^3.1.0",
		"eslint-plugin-prettier": "^5.5.4",
		"eslint-plugin-vue": "^10.6.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"postcss": "^8.5.6",
		"postcss-html": "^1.8.0",
		"prettier": "^3.6.2",
		"sass": "^1.94.2",
		"stylelint": "^16.26.0",
		"stylelint-config-property-sort-order-smacss": "^10.0.0",
		"stylelint-config-recommended-vue": "^1.6.1",
		"stylelint-config-sass-guidelines": "^12.1.0",
		"stylelint-config-standard": "^39.0.1",
		"stylelint-scss": "^6.12.1",
		"vite": "^7.2.4"
	},
	"engines": {
		"node": "22.21.0",
		"npm": "10.9.4"
	},
	"overrides": {
		"braces": "^3.0.3",
		"micromatch": "^4.0.8",
		"postcss": "^8.5.6"
	}
}
